import cv2
from djitellopy import Tello

tello = Tello()

tello.connect()
print(tello.query_battery())

movements = [
    [40, 180 - 120, "1"],
    [93, 180 - 85, "2"],
    [190, 180 - 50, "3"],
    [117, 0, "4"],
    [127, 180 - 20, "5"],
    [97.5, 0]
]

tello.streamon()
frame_read = tello.get_frame_read()

tello.takeoff()

for movement in movements:
    tello.move_forward(movement[0])
    tello.rotate_clockwise(movement[1])
    cv2.imwrite"

tello.land()
