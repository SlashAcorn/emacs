import time
import board
import pwmio
from adafruit_motor import servo

OPENTIME = 1
SECS_PER_DAY = 24 * 60 * 60

pwm_servo = pwmio.PWMOut(board.GP5, duty_cycle=2 ** 15, frequency=50)
servo1 = servo.Servo(
    pwm_servo, min_pulse=500, max_pulse=2200)

servo1.angle = 90
time.sleep(1)

while True:
    servo1.angle = 0
    time.sleep(OPENTIME)
    servo1.angle = 90
    time.sleep(OPENTIME)
    time.sleep(SECS_PER_DAY - 2 * OPENTIME)
