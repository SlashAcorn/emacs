import time
import board
import pwmio
from adafruit_motor import servo

pwm_servo = pwmio.PWMOut(board.GP5, duty_cycle=2 ** 15, frequency=50)
servo1 = servo.Servo(
    pwm_servo, min_pulse=500, max_pulse=2200)

servo1.angle = 90
time.sleep(1)

while True:
    servo1.angle = 0
    time.sleep(0.8)
    servo1.angle = 90
    time.sleep(0.8)
    time.sleep(86400)